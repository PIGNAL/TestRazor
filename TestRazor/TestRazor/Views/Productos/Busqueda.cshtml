@model List<TestRazor.ViewModel.ProductoViewModel>
<h2>Busqueda</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Codigo</th>
            <th>Stock</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Codigo</td>
                <td>@producto.Stock</td>
                <td>@Html.ActionLink("Eliminar", "EliminarPorCodigo", new { codigo = producto.Codigo })</td>
                <td>@Html.ActionLink("Eliminar", "EliminarPorId", new { id = producto.ProductoId })</td>
                <td>@Html.ActionLink("Modificar", "Detalle", new { id = producto.ProductoId })</td>
            </tr>
        }
    </tbody>
</table>