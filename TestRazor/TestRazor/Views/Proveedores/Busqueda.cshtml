@model List<TestRazor.ViewModel.ProveedorViewModel>

@{
    ViewBag.Title = "Busqueda";
}

<h2>Busqueda</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proveedor in Model)
        {
            <tr>
                <td>@proveedor.Nombre</td>
                <td>@proveedor.Direccion</td>
                <td>@proveedor.Telefono</td>
                <td>@Html.ActionLink("Eliminar","EliminarPorNombre",new {proveedor=proveedor.Nombre })</td>
                <td>@Html.ActionLink("Eliminar","EliminarPorId",new { id=proveedor.ProveedorId })</td>
                <td>@Html.ActionLink("Modificar","Detalle",new { id = proveedor.ProveedorId })</td>
            </tr>
        }
    </tbody>
</table>
